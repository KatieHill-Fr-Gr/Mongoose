<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weekday Eats</title>
    <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body>
    <%- include('../partials/nav') %>
     <section id="hero">
    <h1>Recipes</h1>
     <a href="recipes/new" class="button-link">Add new recipe</a>
    </section>
    <ul>
        <% allRecipes.forEach(recipe => { %>
            <li>
                <a href="/recipes/<%= recipe._id %>">
                    <%= recipe.name %>
                </a>
            </li>
            <% }) %>
    </ul>
</body>

</html>